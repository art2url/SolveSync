{
  "manifest_version": 3,
  "name": "SolveSync",
  "version": "1.0",
  "description": "Automate Solution Uploads to GitHub.",
  "icons": {
    "16": "images/app-icon.png",
    "32": "images/app-icon.png",
    "48": "images/app-icon.png",
    "128": "images/app-icon.png"
  },
  "permissions": ["identity", "storage", "activeTab"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://github.com/*",
    "https://solvesync-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "oauth2": {
    "client_id": "Ov23lik3RKBt8FYYNzaV",
    "scopes": ["repo"]
  },
  "externally_connectable": {
    "matches": ["*://leetcode.com/*"]
  },
  "content_security_policy": {
    "script-src": "'self'",
    "object-src": "'self'"
  }
}
